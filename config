ngx_addon_name=ngx_http_ja4_module

if test -n "$ngx_module_link"; then
    ngx_module_type=HTTP
    ngx_module_name=ngx_http_ja4_module
    ngx_module_srcs="$ngx_addon_dir/ngx_http_ja4_module.c"
    
    # Add access to internal HTTP/2 headers (Option 2/3 requirement)
    CFLAGS="$CFLAGS -I src/http/v2"
    
    . auto/module
else
    HTTP_MODULES="$HTTP_MODULES ngx_http_ja4_module"
    NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_http_ja4_module.c"
fi
